{
  "name": "gql-codegen",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "yarn lib:build && yarn gql:update-schema && concurrently \"craco start\" \"yarn gql:generate --watch\"",
    "build": "yarn lib:build && yarn gql:update-schema && craco build",
    "test": "craco test",
    "gql:generate": "graphql-codegen -r dotenv/config",
    "gql:update-schema": "node ./lib/build/gql-update-schema",
    "lib:build": "tsc --project ./lib",
    "lib:watch": "yarn lib:build --watch"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "7.0.0-alpha.0",
    "@graphql-codegen/cli": "^2.4.0",
    "@graphql-codegen/near-operation-file-preset": "^2.2.3",
    "@graphql-codegen/typescript-operations": "^2.2.3",
    "@tsconfig/node16": "^1.0.2",
    "concurrently": "^7.0.0",
    "graphql": "^16.3.0",
    "prettier": "^2.5.1",
    "tsc": "^2.0.4"
  }
}
